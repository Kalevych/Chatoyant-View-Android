    <declare-styleable name="ChatoyantView">
    <attr name="corners_radius" format="dimension" />
    <attr name="surface_background_color" format="color" />
    <attr name="shine_angle" format="integer" />
    <attr name="is_relative_dimension" format="boolean" />
    <attr name="shine_width" format="float" />
    <attr name="animation_velocity" format="float" />
    <attr name="tile_mode" format="enum">
        <enum name="CLAMP" value="0" />
        <enum name="REPEAT" value="1" />
        <enum name="MIRROR" value="2" />
    </attr>
    <attr name="shine_color" format="color" />
    </declare-styleable>

